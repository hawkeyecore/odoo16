<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_web_layout" inherit_id="web.layout">
        <!-- Replace the title element with a custom title -->
        <xpath expr="//head/title" position="replace">
            <title>Hawkeye</title>
        </xpath>

        <!-- Instead of replacing, insert the new favicon inside <head> -->
        <xpath expr="//head" position="inside">
            <link rel="shortcut icon" t-att-href="'/addons/scheduling_dispatch/static/src/hawkeye.png'"/>
        </xpath>
    </template>
    <template id="custom_web_login_layout" inherit_id="web.login_layout">
        <!-- Remove the "Powered by Odoo" block -->
        <xpath expr="//div[contains(@class, 'text-center') and contains(@class, 'border-top')]" position="replace">
            <!-- Replace with nothing to remove the element -->
        </xpath>
    </template>
</odoo>