<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_web_login_layout" inherit_id="web.login_layout">
        <!-- Remove the "Powered by Odoo" block -->
        <xpath expr="//div[contains(@class, 'text-center') and contains(@class, 'border-top')]" position="replace">
            <!-- Replace with nothing to remove the element -->
        </xpath>
    </template>
    <template id="custom_web_title" inherit_id="web.layout">
        <xpath expr="//title" position="replace">
            <title>TaskMeToday App</title>
        </xpath>
    </template>
    <template id="custom_web_icon" inherit_id="web.layout">
        <xpath expr="//link" position="replace">
            <link type="image/x-icon" rel="shortcut icon" t-att-href="x_icon or '/TaskMeToday_app/static/src/TaskMeToday.png'"/>
        </xpath>
    </template>
</odoo>